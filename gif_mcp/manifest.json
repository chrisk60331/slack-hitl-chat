{
  "mcpServers": {
    "gif_mcp": {
      "command": "python",
      "args": ["-m", "gif_mcp.mcp_server"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/gif_mcp"
      },
      "description": "GIF MCP Server for searching, retrieving, and formatting GIFs for Slack",
      "capabilities": {
        "tools": {
          "search_gifs": {
            "description": "Search for GIFs using various criteria and APIs (Giphy, Tenor, or mock fallback)",
            "inputSchema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string",
                  "description": "Search query string for GIFs"
                },
                "limit": {
                  "type": "integer",
                  "default": 10,
                  "minimum": 1,
                  "maximum": 50,
                  "description": "Maximum number of GIFs to return"
                },
                "rating": {
                  "type": "string",
                  "default": "g",
                  "enum": ["g", "pg", "pg-13", "r"],
                  "description": "Content rating filter"
                },
                "language": {
                  "type": "string",
                  "default": "en",
                  "description": "Language for search results"
                },
                "offset": {
                  "type": "integer",
                  "default": 0,
                  "minimum": 0,
                  "description": "Number of results to skip for pagination"
                }
              },
              "required": ["query"]
            }
          },
          "get_random_gif": {
            "description": "Get a random GIF based on optional tag filter",
            "inputSchema": {
              "type": "object",
              "properties": {
                "tag": {
                  "type": "string",
                  "description": "Tag to filter random GIF by"
                },
                "rating": {
                  "type": "string",
                  "default": "g",
                  "enum": ["g", "pg", "pg-13", "r"],
                  "description": "Content rating filter"
                }
              }
            }
          },
          "get_trending_gifs": {
            "description": "Get currently trending GIFs from popular platforms",
            "inputSchema": {
              "type": "object",
              "properties": {
                "limit": {
                  "type": "integer",
                  "default": 10,
                  "minimum": 1,
                  "maximum": 50,
                  "description": "Maximum number of trending GIFs to return"
                },
                "rating": {
                  "type": "string",
                  "default": "g",
                  "enum": ["g", "pg", "pg-13", "r"],
                  "description": "Content rating filter"
                },
                "time_period": {
                  "type": "string",
                  "default": "day",
                  "enum": ["day", "week", "month"],
                  "description": "Time period for trending"
                }
              }
            }
          },
          "format_gif_for_slack": {
            "description": "Format a GIF result for Slack display with rich blocks",
            "inputSchema": {
              "type": "object",
              "properties": {
                "gif_data": {
                  "type": "object",
                  "description": "GIF result data from search or random endpoints"
                },
                "message": {
                  "type": "string",
                  "default": "",
                  "description": "Custom text message to accompany the GIF"
                }
              },
              "required": ["gif_data"]
            }
          },
          "search_and_format_for_slack": {
            "description": "Search for GIFs and format them for Slack in one operation",
            "inputSchema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string",
                  "description": "Search query for GIFs"
                },
                "message": {
                  "type": "string",
                  "default": "",
                  "description": "Custom text message to accompany the GIF"
                },
                "limit": {
                  "type": "integer",
                  "default": 5,
                  "minimum": 1,
                  "maximum": 10,
                  "description": "Maximum number of GIFs to search"
                }
              },
              "required": ["query"]
            }
          },
          "get_random_gif_for_slack": {
            "description": "Get a random GIF and format it for Slack display",
            "inputSchema": {
              "type": "object",
              "properties": {
                "tag": {
                  "type": "string",
                  "default": "",
                  "description": "Tag to filter random GIF by"
                },
                "message": {
                  "type": "string",
                  "default": "",
                  "description": "Custom text message to accompany the GIF"
                },
                "rating": {
                  "type": "string",
                  "default": "g",
                  "enum": ["g", "pg", "pg-13", "r"],
                  "description": "Content rating filter"
                }
              }
            }
          }
        }
      }
    }
  }
}
